{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "lib": ["es6", "es2021", "esnext"],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true
  }
}
